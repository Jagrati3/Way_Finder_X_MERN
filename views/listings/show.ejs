<% layout("/layouts/boilerplate") %>

<div class="container my-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <!-- Card for listing details -->
      <div class="card shadow-lg border-0 cardonafterclick">
        <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="<%= listing.title %>"
          style="height: 400px; object-fit: cover;" />

        <div class="card-body">
          <h3 class="card-title text-danger fw-bold">
            <%= listing.title %>
          </h3>
          <p class="card-text text-muted mb-2">
            <%= listing.description %>
          </p>

          <hr>

          <ul class="list-unstyled mb-4">
            <li><strong>Price:</strong> ‚Çπ<%= listing.price.toLocaleString("en-IN") %></li>
            <li><strong>Location:</strong> <%= listing.location %></li>
            <li><strong>Country:</strong> <%= listing.country %></li>
          </ul>

          <!-- Buttons: Edit & Delete -->
          <div class="d-flex justify-content-start">
            <!-- Edit Listing Button -->
            <a href="/listings/<%= listing._id %>/edit" class="btn btn-outline-danger">
              ‚úèÔ∏è Edit Listing
            </a>

            <!-- Delete Listing Button -->
            <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST" class="ms-2" onsubmit="return confirm('Are you sure you want to delete this listing?');">
              <button class="btn btn-danger">
                üóëÔ∏è Delete Listing
              </button>
            </form>
          </div>
        </div> 
      </div>
    </div>
  </div>
</div>

<!-- ........................................ -->
<!-- Review form -->
<div class="col-8 offset-3 my-4">
  <hr />
  <h4>Leave a Review</h4>

  <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">
    <!-- Rating -->
    <div class="mb-3">
      <label for="rating" class="form-label">Rating (1 to 5)</label>
      <input 
        type="range" 
        min="1" 
        max="5" 
        id="rating" 
        name="review[rating]" 
        class="form-range"
        required
      />
    </div>

    <!-- Comment -->
    <div class="mb-3">
      <label for="comment" class="form-label">Comments</label>
      <textarea
        name="review[comment]"
        id="comment"
        cols="30"
        rows="5"
        class="form-control"
        required
      ></textarea>
      <div class="invalid-feedback">Please add a comment</div>
    </div>

    <!-- Submit Button -->
    <button class="btn btn-dark">Submit</button>
  </form>
</div>

<!-- Reviews Section -->
<h4 class="mt-4 mb-3 fw-bold text-center text-danger">All Reviews</h4>

<div class="row g-3">
  <% if (listing.reviews.length === 0) { %>
    <p class="text-center text-muted">No reviews yet.</p>
  <% } %>

  <% for (let review of listing.reviews) { %>
    <div class="col-md-6">
      <div class="card review-card shadow-sm">
        <div class="card-body">
          <h6 class="fw-bold text-pink">
            @<%= review.author?.username || "Unknown" %>
          </h6>

          <p class="text-secondary"><%= review.comment %></p>

          <p class="fw-bold"><%= review.rating %> ‚≠ê</p>

          <!-- DELETE BUTTON INSIDE EACH REVIEW -->
          <form 
            action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
            method="POST"
          >
            <button class="btn btn-sm btn-danger">
              Delete
            </button>
          </form>
        </div>
      </div>
    </div>
  <% } %>
</div>
